    {
      "type": "range",
      "id": "image_width_2",
      "min": 1,
      "max": 50,
      "step": 0.5,
      "unit": "rem",
      "label": "Width of image (Mobile)",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "Custom Hero for Pages",
      "category": "Custom"
    }
  ]
}
{% endschema %}

