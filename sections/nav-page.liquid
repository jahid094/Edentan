{{ 'nav-page-section.css' | asset_url | stylesheet_tag }}

<div class="layout-container-wrapper">
  <div class="logo-wrapper">
    <a href="/"><img width="" height="" src="{{ settings.logo | img_url: 'medium' }}" class="custom-hero-menu-logo"></a>
  </div>
  <div class="layout-container">
    <!-- Left Side Navigation -->
    <aside class="navigation-sidebar">
      <ul class="navigation-list">
        {%- for link in section.settings.menu.links -%}
          <li>
            <a
              href="{{ link.url }}"
              class="{%- if link.handle == page.metafields.custom.menu_handle -%}active{%- endif -%}"
            >
              {{- link.title }} â†’</a
            >
          </li>
          {% comment %} <li>link handle - {{ link.handle }}</li> {% endcomment %}
        {% endfor %}
      </ul>
    </aside>

    <!-- Right Side Content -->
    <section class="page-content-container">
      {% comment %} {{ page.content  }}  {% endcomment %}

      {%- if page.handle == 'contact' -%}
        <div class="contact-container">
          <h2 class="contact-title">Contact Supreme</h2>
          {% form 'contact' %}
            {{ form.errors | default_errors }}
            <div class="contact-row">
              <label for="first-name" required="required" class="hidden">First name</label>
              <input
                placeholder="first name"
                class="contact-input"
                type="text"
                name="contact[first_name]"
                id="first-name"
              >
              <label for="last-name" class="hidden">Last name</label>
              <input placeholder="last name" class="contact-input" name="contact[last_name]" id="last-name" type="text">
            </div>
            <div class="contact-row">
              <label for="email" required="required" class="hidden">Email</label>
              <input placeholder="your email" class="contact-input" type="email" name="contact[email]" id="email">
              <label for="order-number" class="hidden">Order number</label>
              <input
                placeholder="order number"
                class="contact-input"
                type="text"
                name="contact[order_number]"
                id="order-number"
              >
            </div>
            <div class="contact-row">
              <label class="hidden" for="request-type">What is this regarding?</label
              ><select id="request-type" class="contact-select" name="contact[request_type]">
                <option>online order status requests</option>
                <option>Returns</option>
                <option>Shipping</option>
                <option>Custom order</option>
                <option>Other</option>
              </select>
            </div>
            <div class="contact-row">
              <label class="hidden" for="message">Message</label>
              <textarea name="contact[body]" id="message" placeholder="message" class="contact-textarea"></textarea>
            </div>
            <div class="contact-row"><input class="contact-submit" type="submit" value="send"></div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="contact-successfull"
                tabindex="-1"
                autofocus
              >
                Thanks for contacting us
              </h3>
            {%- endif -%}
          {% endform %}
        </div>
      {%- elsif page.handle == 'newsletter' -%}
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div
            class="newsletter-form__field-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
          <div class="newsletter-container">
            <h2 class="newsletter-title">Add my email to your mailing list</h2>
            <div class="newsletter-field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="contact-input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="Newsletter-error--{{ section.id }}"
                {% elsif form.posted_successfully? %}
                  aria-describedby="Newsletter-success--{{ section.id }}"
                {% endif %}
                placeholder="{{ 'newsletter.label' | t }}"
                required
              >
              <label class="field__label hidden" for="NewsletterForm--{{ section.id }}">
                {{ 'newsletter.label' | t }}
              </label>
              <p>I understand that i can opt out at any time <br> notify me when the web shop is updated with new items</p>
              <button
                type="submit"
                class="contact-submit"
                name="commit"
                id="Subscribe"
                aria-label="{{ 'newsletter.button_label' | t }}"
                style="margin-top: 20px;"
              >
                {{ 'newsletter.button_label' | t }}
              </button>
            </div>
          </div>
            {%- if form.errors -%}
              <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                {%- render 'icon-error' -%}
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </small>
            {%- endif -%}
          </div>
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="Newsletter-success--{{ section.id }}"
              tabindex="-1"
              autofocus
            >
              {% render 'icon-success' -%}
              {{- 'newsletter.success' | t }}
            </h3>
          {%- endif -%}
        {% endform %}
      {%- else -%}
        {{ page.content }}
      {%- endif -%}
    </section>

